<section id="viewAddhotel">
    <h2>Add new hotel</h2>
    {{#if error}}
        {{> notification}}
    {{/if}}
    <form id="formAddhotel" action="/create" method="POST">
        <label for="hotel">Hotel name:</label>
        <input type="text" id="hotel" name="name" placeholder="Hotel name" required="true">
        <label for="city">City:</label>
        <input type="text" id="city" name="city" placeholder="City" required="true">
        <label for="free-rooms">Free rooms:</label>
        <input type="number" id="free-rooms" name="freeRooms" placeholder="Free rooms" required="true" type="number" min="1" max="100">
        <label for="imgUrl">Image:</label>
        <input type="text" id="imgUrl" name="imageUrl" placeholder="https://" required="true">
        <input type="submit" class="create" value="Add">
    </form>
</section>